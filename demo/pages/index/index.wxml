<!-- swiper -->
<swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for-items="{{imgUrls}}">
        <swiper-item  bindtap="bindViewTap">
            <image src="{{item}}" class="slide-image" />
        </swiper-item>
    </block>
</swiper>


<!-- list -->
<View class="items">
    <block wx:for-items="{{items}}">
        <view style="background-image: url('http://img06.tooopen.com/images/20160818/tooopen_sy_175866434296.jpg');background-size:cover "> 
            {{item}} 
        </view>
    </block>
</View>





