<!-- swiper -->
<swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for-items="{{imgUrls}}">
        <swiper-item  bindtap="bindViewTap"  data-link="{{item.link}}">
            <image src="{{item.img}}" class="slide-image" />
        </swiper-item>
    </block>
</swiper>


<!-- list -->
<View class="items">
    <block wx:for-items="{{items}}">
        <view style="background-color:{{item.color}}" bindtap="tapLink" data-url="{{item.url}}"> 
            {{item.name}} 
        </view>
    </block>
</View>





